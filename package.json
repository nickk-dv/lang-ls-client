{
  "name": "lang-ls",
  "displayName": "lang-ls",
  "description": "Lang language support for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "keywords": [
    "lang"
  ],
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lang"
  ],
  "main": "./dist/main",
  "contributes": {
    "languages": [
      {
        "id": "lang",
        "aliases": [
          "lang"
        ],
        "extensions": [
          ".lang"
        ],
        "configuration": "./lang-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lang",
        "scopeName": "source.lang",
        "path": "./lang-tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.24.0",
    "typescript": "^5.2.2"
  }
}
